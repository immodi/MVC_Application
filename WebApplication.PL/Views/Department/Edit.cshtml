@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />
<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class=col-form-label asp-for="Code">Code</label>
        <input class="form-control" asp-for="Code"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class=col-form-label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class=col-form-label asp-for="DateOfCreation">Date of Creation</label>
        <input class="form-control" asp-for="DateOfCreation"/>
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <br />

    <input type="submit" value="Submit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>
